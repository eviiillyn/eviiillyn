           	cadeia opcao_4 = " 4-Você decide usar um feitiço que criou sozinho, um feitiço de invisibilidade, tem grande chance de dar errado, mas da última vez que você testou ele funcionou \n"
           	cadeia a1 = "opção 1"
		 	cadeia a2 = "opção 2"
		 	cadeia a3 = "opção 3"
		 	cadeia a4 = "opção 4"

		 	cadeia qw  
		 
		 	escreva("Suas escolhas são:\n", opcao_1, opcao_2, opcao_3, ",", opcao_4)
		 	escreva("digite ",a1,",",a2,",",a3,"ou ", a4, " para realizar as ações")
		 	leia(primeira_escolha)
		 	
		   	se(primeira_escolha == a1){
		   		
		   		escreva("Você consegue chegar no armário, mas acaba derrubando uma vassoura e é pego\n") 
		   		consequencia_boa++
		   	
		   	} senao se (primeira_escolha == a2){
		   		escreva("Você correu o mais rápido que pôde e conseguiu voltar pra o dormitório\n")
		   		consequencia_ruim++
		   	}

		   	
			senao se (primeira_escolha == a3){escreva("Um guarda, mesmo sonolento consegue te ver, você é pego\n") consequencia_boa++}
			senao se(primeira_escolha == a4){escreva("*invisibilium* Você consegue realizar o feitiço com êxito e faz o caminho de volta pro dormitório competamente invisível ")
			consequencia_ruim++}
			senao{escreva("Você demorou muito, quando foi correr, acabou tropeçando, infelizmete acabou sendo pego :(") consequencia_neutra++}
