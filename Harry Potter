          funcao casa_sorteada()     { 

           	inteiro casa_s = u.sorteia(1, 4)
           	u.aguarde(1000)

          	se(casa_s == 1){ 
          		
           		escreva("GRIFINÓRIAA!!!!!!!!!!!!!\n") 
           		casa = "GRIFINÓRIAA"
           		
           	} senao se(casa_s == 2) { 
           		
           		escreva( "CORVINAL!!!!!\n")
           		casa = "CORVINAL"
           	} senao se(casa_s == 3) { 
           		
           		escreva("LUFA-LUFA!!!!!!!!!!\n") 
           		casa = "LUFA-LUFA"
           	} senao se(casa_s == 4) { 
           		
           		escreva("SONSERINA!!!!!!!!!!!!!\n") 
           		casa = "SONSERINA"
           	}
       
           
		}// fim casa sorteada

    		funcao primeira_encrenca() {
    			
          	cadeia primeira_escolha
